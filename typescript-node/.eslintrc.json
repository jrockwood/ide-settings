{
  "env": {
    "es2021": true,
    "jasmine": true,
    "node": true
  },
  "extends": ["standard", "plugin:@typescript-eslint/recommended", "prettier/prettier", "plugin:prettier/recommended"],
  "ignorePatterns": "./package.json",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [ "error", { "argsIgnorePattern": "^_"} ]
  }
}
